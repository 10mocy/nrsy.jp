  <style lang="scss">
    .container {
      display: grid;
      grid-template-rows: 1fr auto;
      min-height: 100%;
      border: 10px solid var(--primary-brand-color);
      padding: 40px 20%;
      gap: 40px;

      // overflow: hidden;

      @media screen and (max-width: 840px) {
        padding: 30px;
      }
    }

    .nameplate {
      &_name {
        font-size: 1.5em;
        font-weight: bold;
      }
      &_yomi {
        font-weight: bold;
      }
    }

    .profile {
      margin-top: 10px;
      padding-left: 20px;

      list-style: disc;
      li {
        padding-bottom: 5px;
        &:last-child {
          margin-bottom: 0;
        }
      }
    }

    .contact {
      &_card {
        position: relative;

        &_link {
          display: inline-block;
          padding: 4px 0;
          z-index: 0;
          position: relative;
          color: var(--black-color);
          text-decoration: none;

          transition: color 0.3s ease, font-weight 0.3s ease;

          &:hover {
            font-weight: bold;
            color: var(--primary-brand-color);

            & + .contact_card_description {
              transform: translateY(calc(-1.5em - 8px));
              opacity: 1;
            }
          }
        }

        &_description {
          padding: 5px;
          position: absolute;
          background-color: #f0f0f0;
          transform: translateY(0);
          z-index: 5;
          opacity: 0;
          bottom: 0;
          left: 0;
          pointer-events: none;
          font-weight: bold;
          transition: transform 0.35s ease, opacity 0.35s ease;
        }
      }
    }

    .organization {
      &_name {
        font-weight: bold;
      }
      &_list {
        list-style: none;
      }
    }
  </style>
</BaseLayout>
